  },
  "scripts": {
    "start:packager": "node node_modules/react-native/local-cli/cli.js start --reset-cache",
    "start:android": "react-native run-android --no-packager",
    "start:ios": "react-native run-ios --simulator='iPhone X' --no-packager",
    "start:ios:device": "react-native run-ios --device --no-packager",
    "android": "run-p start:packager start:android",
    "ios": "run-p start:packager start:ios",
    "ios:device": "run-p start:packager start:ios:device",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "assets:icons": "rn-toolbox icons",
    "assets:splashscreen": "rn-toolbox splash",
    "assets": "run-s assets:*"
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.0.1",
    "i18n-js": "^3.0.11",
    "lodash": "^4.17.11",
    "native-base": "^2.8.0",
    "react": "16.5.0",
    "react-native": "0.57.1",
    "react-native-languages": "^3.0.0",
    "react-native-sentry": "^0.39.0",
    "react-native-splash-screen": "^3.1.1",
    "react-navigation": "^2.17.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@panz3r/react-native-toolbox": "^1.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "23.6.0",
    "babel-plugin-root-import": "^6.1.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^5.6.1",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.3.0",
    "flow-bin": "0.78",
    "jest": "23.6.0",
    "metro-react-native-babel-preset": "0.45.6",
    "npm-run-all": "^4.1.3",
    "react-native-dotenv": "^0.2.0",
    "react-test-renderer": "16.5.0"
  },
  "jest": {
    "preset": "react-native"
  }
